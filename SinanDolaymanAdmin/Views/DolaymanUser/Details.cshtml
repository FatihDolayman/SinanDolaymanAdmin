@model Entities.DolaymanUser

@{
    ViewBag.Title = "Details";
}


<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-10">
                <!-- ============================================================== -->
                <!-- pageheader  -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header" id="top">
                            <h2 class="pageheader-title">Kullanıcı Detayları </h2>
                            <p class="pageheader-text">@Model.FullName</p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")" class="breadcrumb-link">Anasayfa</a></li>
                                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DolaymanUser")" class="breadcrumb-link">Kullanıcılar</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Kullanıcı Detay</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end pageheader  -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- overview  -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-section" id="overview">
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h2>@Model.FullName</h2>
                                    <dl class="dl-horizontal">


                                        <dt>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Email)
                                        </dd>


                                        <dt>
                                            Rolleri:
                                        </dt>

                                        <dd>
                                            @{

                                                for (int i = 0; i < ViewBag.RolSayisi; i++)
                                                {
                                                    <label>@ViewBag.UserRoles[i].Name </label>
                                                    if (i < ViewBag.RolSayisi-1)
                                                    {
                                                       <d>,</d>
                                                    }
                                                }

                                            }
                                        </dd>
                                    </dl>

                                    <p>
                                        @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }) |
                                        @Html.ActionLink("Listeye Dön", "Index")
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->

    </div>
</div>



