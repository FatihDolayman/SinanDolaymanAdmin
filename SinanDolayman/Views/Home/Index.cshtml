        border-radius: 500px;
        background: transparent;
        opacity: 100%;
    }
    #cember4 {
        border: 3px solid #40D3DC;
        padding: 5px;
        height: 2px;
        width: 2px;
        border-radius: 500px;
        background: transparent;
        opacity: 100%;
    }
</style>
@{
    if (String.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            
            <ol class="carousel-indicators">
                <li onclick="cemberDoldur('cember1')" id="cember1" class="manual-btn" data-target="#carouselExampleCaptions" data-slide-to="0" ></li>
                <li onclick="cemberDoldur('cember2')" id="cember2" class="manual-btn" data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li onclick="cemberDoldur('cember3')" id="cember3" class="manual-btn" data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                <li onclick="cemberDoldur('cember4')" id="cember4" class="manual-btn" data-target="#carouselExampleCaptions" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">

                @{
                    int sayac = 0;

                    foreach (var item in Model.Articles)
                    {
                        sayac++;
                        if (sayac == 1)
                        {
                            <div  class="carousel-item active">
                                <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@item.Title</h5>
                                    <p>@Html.Raw(item.Summary)</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@item.Title</h5>
                                    <p>@Html.Raw(item.Summary)</p>
                                </div>
                            </div>
                        }
                        if (sayac==4)
                        {
                            break;
                        }

                    }
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                @*<span class="carousel-control-prev-icon" style="background-color:red;color:yellow !important" aria-hidden="true"></span>*@
                @*<span class="sr-only">Previous</span>*@
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                @*<span class="carousel-control-next-icon" aria-hidden="true"></span>*@
                @*<span class="sr-only">Next</span>*@
            </a>
        </div>
    }
}

<br />

@{
    if (Model.Articles != null)
    {
        foreach (var article in Model.Articles)
        {
            <div style="border:none; height:210px" class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@article.CoverImage" class="card-img" height="210" width="240" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title" style="">@article.Title</h5>
                            <p class="card-text">@article.Summary</p>
                            <a type="submit" id="detayButonu" class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Details","Article",new {id=article.Id })"> Devamı...</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
}


