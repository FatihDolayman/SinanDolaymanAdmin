<script>
    function cemberDoldur(btnId) {
        var digerBtnler = document.getElementsByClassName('manual-btn');
        Array.from(digerBtnler).forEach((el) => {          
            el.style.backgroundColor = 'transparent';
        });
        
        var btn = document.getElementById(btnId);      
        btn.style.backgroundColor = '#40D3DC';

    }
</script>