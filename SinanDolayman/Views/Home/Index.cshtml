@{
    ViewBag.Title = "Sinan Dolayman";
}
@model SinanDolayman.Models.SearchModel
<style>        
    .manual-btn:not(:last-child) {
        margin-right: 40px !important;
    }
    .manual-btn:hover {
        background: #40D3DC !important;
    }

    #cember1 {
        border: 3px solid #40D3DC;
        padding: 5px;
        height: 2px;
        width: 2px;
        border-radius: 500px;
        background: transparent;
        opacity: 100%;
    }
    #cember2 {
        border: 3px solid #40D3DC;
        padding: 5px;
        height: 2px;
        width: 2px;
        border-radius: 500px;
        background: transparent;
        opacity: 100%;
    }
    #cember3 {
        border: 3px solid #40D3DC;
        padding: 5px;
        height: 2px;
