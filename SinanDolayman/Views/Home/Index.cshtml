<script>
    $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 10,
        mergeFit: true,
        nav: true,
        responsiveClass: true,
        responsive: {
            0: {
                items: 1,
                nav: true
            },
            600: {
                items: 1,
                nav: false
            },
            1000: {
