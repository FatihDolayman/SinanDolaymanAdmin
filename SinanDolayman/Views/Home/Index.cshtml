@{
    ViewBag.Title = "Sinan Dolayman";
}
@model SinanDolayman.Models.SearchModel

@{
    if (ViewBag.SearchTerm == null)
    {
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">

                @{
                    int sayac = 0;

                    foreach (var item in Model.Articles)
                    {
                        sayac++;
                        if (sayac == 1)
                        {
                            <div class="carousel-item active">
                                <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@item.Title</h5>
                                    <p>@Html.Raw(item.Summary)</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@item.Title</h5>
                                    <p>@Html.Raw(item.Summary)</p>
                                </div>
                            </div>
                        }

                    }
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
}

<br />

@{
    if (Model.Articles != null)
    {
        foreach (var article in Model.Articles)
        {
            <div style="border:none" class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@article.CoverImage" class="card-img" height="210" width="240" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title" style="">@article.Title</h5>
                            <p class="card-text">@article.Summary</p>
                            <p class="card-text"><small class="text-muted"><a href="@Url.Action("Details", "Article", new { id = article.Id })">Devamı...</a></small></p>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
}


