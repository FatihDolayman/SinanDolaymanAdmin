@{
    if (Model.ortakModel != null)
    {
        foreach (var item in Model.ortakModel)
        {
            <div style="border:none;" class="card mb-3 pb-3 pb-md-0">

                <div class="row no-gutters">
                    <div class="col-md-4" style="background-color: #f8f9ff">
                        <section class="base cover">
                            <a href="@Url.Action("Details",item.Module.ToString(),new {id=item.GenerateSlug()})">
                                <img style="max-height: 220px; " src="@item.CoverImage" class="card-img" alt="...">
                            </a>
                        </section>
                            

                    </div>
                    <div class="col-md-8">
                        <div class="card-body p-2">
                            <a href="@Url.Action("Details",item.Module.ToString(),new {id=item.GenerateSlug() })">
                                <h5 class="card-title" style="color:black">@item.TitleOrName</h5>
                            </a>
                            <p class="card-text">@item.Summary.SubNullable(0, 120)... </p>
                            <a id="detayButonu" class="btn btn-outline-success my-0 my-md-2 " href="@Url.Action("Details",item.Module.ToString(),new {id=item.GenerateSlug()})"> Devamı...</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
}


