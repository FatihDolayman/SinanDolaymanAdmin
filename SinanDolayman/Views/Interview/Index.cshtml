@model IEnumerable<Entities.Interview>
<br />
@{
    ViewBag.Title = "Röportajlar";
}




@{
    foreach (var item in Model)
    {
        <div class="carousel-item">
            @*<img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">*@

            <div class="carousel-caption d-none d-md-block">
                <h5>@item.Title</h5>
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>
    }
}


@foreach (var interview in Model)
{
    <div style="border:none" class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <a href="@Url.Action("Details","Interview",new {id=interview.Id })">
                    <img src="@interview.CoverImage" class="card-img" height="210" width="240" alt="...">
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="@Url.Action("Details","Interview",new {id=interview.Id })"><h5 style="color:black" class="card-title">@interview.Title</h5></a>
                    <p class="card-text">@interview.Summary</p>                    
                    <a type="submit" class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Details","Article",new {id=interview.Id })"> Devamı...</a>
                </div>
            </div>
        </div>
    </div>

}
