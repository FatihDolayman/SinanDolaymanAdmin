@model IEnumerable<Entities.Book>
<br />
@{
    ViewBag.Title = "Index";
}





@{
    foreach (var item in Model)
    {
        <div class="carousel-item">
            <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

            <div class="carousel-caption d-none d-md-block">
                <h5>@item.Name</h5>
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>
    }
}


@foreach (var makale in Model)
{
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@makale.CoverImage" class="card-img" height="210" width="240" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" style="+">@makale.Name</h5>
                    <p class="card-text">@makale.Summary</p>
                    <p class="card-text"><small class="text-muted"><a href="@Url.Action("Details","Article")">Devamı...</a></small></p>
                    

                </div>
            </div>
        </div>
    </div>

}

