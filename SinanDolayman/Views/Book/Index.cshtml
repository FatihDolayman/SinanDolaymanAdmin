@model IEnumerable<Entities.Book>
<br />
@{
    ViewBag.Title = "Kitaplar";
}




@{
    foreach (var item in Model)
    {
        <div class="carousel-item">
            <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

            <div class="carousel-caption d-none d-md-block">
                <h5>@item.Name</h5>
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>
    }
}

@foreach (var makale in Model)
{
    <div style="border:none" class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <a href="@Url.Action("Details","Book",new {id=makale.Id })">
                    <img src="@makale.CoverImage" class="card-img" height="210" width="240" alt="...">
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="@Url.Action("Details","Book",new {id=makale.Id })"><h5 style="color:black" class="card-title">@makale.Name</h5></a>
                    <p class="card-text">@makale.Summary</p>
                    <a href="@Url.Action("Details","Book",new {id=makale.Id })">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Devamı...</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

}

