@model IEnumerable<SinanDolayman.Models.BookIndexViewModel>
<br />
@{
    ViewBag.Title = "Kitaplar";
}




@{
    foreach (var item in Model)
    {
        <div class="carousel-item">
            <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

            <div class="carousel-caption d-none d-md-block">
                <h5>@item.Name</h5>
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>
    }
}

@foreach (var book in Model)
{
    <div style="border:none; height:210px" class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <a href="@Url.Action("Details","Book",new {id=book.Id })">
                    <img src="@book.CoverImage" class="card-img" height="210" width="240" alt="...">
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="@Url.Action("Details","Book",new {id=book.Id })"><h5 style="color:black" class="card-title">@book.Name</h5></a>
                    <p class="card-text">@book.Summary</p>
                    <a type="submit" id="detayButonu" class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Details","Book",new {id=book.GenerateSlug()})"> Devamı...</a>
                </div>
            </div>
        </div>
    </div>

}

