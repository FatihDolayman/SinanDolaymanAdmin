@model IEnumerable<SinanDolayman.Models.ArticleIndexViewModel>
<br />
@{
    ViewBag.Title = "Makaleler";
}



@{
    foreach (var item in Model)
    {
        <div class="carousel-item">
            <img src="@item.CoverImage" class="d-block w-100" height="500" alt="...">

            <div class="carousel-caption d-none d-md-block">
                <a><h5>@item.Title</h5></a>
                <p>@Html.Raw(item.Summary)</p>
            </div>
        </div>
    }
}


@foreach (var makale in Model)
{
    <div style="border:none; height:210px" class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <a href="@Url.Action("Details","Article",new {id=makale.Id })">
                    <img src="@makale.CoverImage" class="card-img" height="210" width="240" alt="...">
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="@Url.Action("Details","Article",new {id=makale.Id })"><h5 style="color:black" class="card-title">@makale.Title</h5></a>
                    <p class="card-text">@makale.Summary</p>
                    <a type="submit" id="detayButonu" class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Details","Article", new {id=makale.GenerateSlug()})"> Devamı...</a>
                </div>
            </div>
        </div>
    </div>

}

