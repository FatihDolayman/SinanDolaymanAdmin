        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("Index","Home")">Anasayfa</a>
